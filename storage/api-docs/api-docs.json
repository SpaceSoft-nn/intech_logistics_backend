        "/api/notification/confirm": {
            "post": {
                "tags": [
                    "Notification"
                ],
                "summary": "Активировать email или phone по коду",
                "operationId": "75e9923dfc929598d0653f9ec8203bd5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "allOf": [
                                    {
                                        "properties": {
                                            "code": {
                                                "description": "Шестизначный код",
